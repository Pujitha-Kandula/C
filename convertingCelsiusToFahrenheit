#include <stdio.h>

int main()
{
    float c,f;
    int choice;
    printf("1.Converting Celsius to Fahrenheit\n");
    printf("2.Converting Fahrenheit to Celsius\n");
    printf("Enter your choice: ");
    scanf("%d",&choice);
    switch(choice)
    {
        case 1: printf("Enter Celsius value: ");
                scanf("%f",&c);
                printf("The Fahrenheit value is %.2f\n",(c*9/5)+32);
                break;
        case 2: printf("Enter Fahrenheit value: ");
                scanf("%f",&f);
                printf("The Celsius value is %.2f\n",(f-32)*5/9);
                break;
        default: printf("Enter correct choice");
    }
    return 0;
}
